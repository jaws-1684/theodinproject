      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <%= link_to "Flight Booker", root_path, class: "nav-link active navbar-brand"%>
        </li>
    </div>
  </div>
</nav>
    
    <div class="search-container">
      <% if notice %>
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
